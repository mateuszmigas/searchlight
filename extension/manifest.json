{
  "name": "Searchlight",
  "description": "Quickly search for bookmarks and tabs in Chrome",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "bookmarks", "scripting", "tabs"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/searchlight16.png",
      "32": "/images/searchlight32.png",
      "48": "/images/searchlight48.png",
      "128": "/images/searchlight128.png"
    }
  },
  "icons": {
    "16": "/images/searchlight16.png",
    "32": "/images/searchlight32.png",
    "48": "/images/searchlight48.png",
    "128": "/images/searchlight128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+M",
        "mac": "Command+E"
      }
    }
  }
}
